<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:colorPrimary">@color/colorPrimary</item>
        <item name="android:colorBackground">@color/colorBackground</item>
    </style>

    <style name= "AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name= "windowNoTitle">true</item>
    </style>

    <style name="title1">
        <item name="android:fontFamily">@font/fonts</item>
        <item name="android:fontStyle">normal</item>
        <item name="android:textSize">25pt</item>
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <style name="title2">
        <item name="android:fontFamily">@font/fonts</item>
        <item name="android:fontStyle">normal</item>
        <item name="android:textSize">8pt</item>
        <item name="android:textColor">@color/colorSecondary</item>
    </style>

    <style name="subHead">
        <item name="android:fontFamily">@font/fonts</item>
        <item name="android:fontStyle">italic</item>
        <item name="android:textSize">13pt</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/colorSignal</item>
    </style>

    <style name="buttonEnabled">
        <item name="android:fontFamily">@font/fonts</item>
        <item name="android:fontStyle">italic</item>
        <item name="android:textSize">8pt</item>
        <item name="android:textColor">@color/colorBackground</item>
    </style>

    <style name="buttonDisabled">
        <item name="android:fontFamily">@font/fonts</item>
        <item name="android:fontStyle">italic</item>
        <item name="android:textSize">10pt</item>
        <item name="android:textColor">@color/colorMainText</item>
    </style>

    <style name="paragraph">
        <item name="android:fontFamily">@font/fonts</item>
        <item name="android:fontStyle">normal</item>
        <item name="android:textSize">15pt</item>
        <item name="android:textColor">@color/colorMainText</item>
    </style>

    <style name="description">
        <item name="android:fontFamily">@font/fonts</item>
        <item name="android:fontStyle">normal</item>
        <item name="android:textSize">8pt</item>
        <item name="android:textColor">@color/colorMainText</item>
    </style>

    <style name="links">
        <item name="android:fontFamily">@font/fonts</item>
        <item name="android:fontStyle">italic</item>
        <item name="android:textSize">15pt</item>
        <item name="android:textColor">@color/colorPrimaryVariant</item>
    </style>

    <style name="clickableString">
        <item name="android:fontFamily">@font/fonts</item>
        <item name="android:fontStyle">normal</item>
        <item name="android:textSize">8pt</item>
        <item name="android:textColor">@color/colorSecondary</item>
    </style>

    <style name="boldString">
        <item name="android:fontFamily">@font/fonts</item>
        <item name="android:fontStyle">italic</item>
        <item name="android:textSize">8pt</item>
        <item name="android:textColor">@color/colorSecondary</item>
    </style>

    <style name="dropdown_text">
        <item name="android:fontFamily">@font/fonts</item>
        <item name="android:fontStyle">normal</item>
        <item name="android:textColor">@color/colorMainText</item>
        <item name="android:textSize">5pt</item>
    </style>

    <style name="radioButtonStyle">
        <item name="android:fontFamily">@font/fonts</item>
        <item name="android:fontStyle">normal</item>
        <item name="android:textColor">@color/colorMainText</item>
        <item name="android:textSize">5pt</item>
        <item name="android:buttonTint">@color/colorSecondary</item>
    </style>

</resources>
