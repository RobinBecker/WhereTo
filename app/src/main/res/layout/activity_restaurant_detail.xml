<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/colorBackground"
    android:id="@+id/detail">

    <include layout="@layout/toolbar"/>

    <Button
        android:id="@+id/reserve_restaurant"
        style="@style/buttonEnabled"
        android:layout_width="196dp"
        android:layout_height="46dp"
        android:layout_marginStart="104dp"
        android:layout_marginTop="504dp"
        android:background="@drawable/shape_button"
        android:elevation="8dp"
        android:gravity="center_vertical|center_horizontal"
        android:text="@string/plaetze_reservieren"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/invite_friends"
        style="@style/buttonEnabled"
        android:layout_width="196dp"
        android:layout_height="46dp"
        android:layout_marginStart="104dp"
        android:layout_marginTop="584dp"
        android:background="@drawable/shape_button"
        android:elevation="8dp"
        android:gravity="center_vertical|center_horizontal"
        android:text="@string/freunde_einladen"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.gms.maps.MapView
        android:id="@+id/mapView"
        android:layout_width="324dp"
        android:layout_height="259dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="64dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/restaurant_name"
        style="@style/clickableString"
        android:layout_width="324dp"
        android:layout_height="27dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="352dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/restaurant_strasse"
        style="@style/description"
        android:layout_width="324dp"
        android:layout_height="27dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="404dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/restaurant_plz"
        style="@style/description"
        android:layout_width="324dp"
        android:layout_height="27dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="428dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>